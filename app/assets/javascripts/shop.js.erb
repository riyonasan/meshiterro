$(window).on('load', function(){
 $(function(){
   return $('#user_like').on('ajax:complete', function(event){
     var response;
     response = event.detail[0].response;
     var img = new Array();
     img[0] = new Image();
     img[0].src = "<%= image_path('white_heart.png') %>";
     img[1] = new Image();
     img[1].src = "<%= image_path('heart.png') %>";
     if(response == 'false'){
       $('#updated_by_ajax').children("img").attr("src", img[1].src);
     }else if(response == 'true'){
       $('#updated_by_ajax').children("img").attr("src", img[0].src);
     }
    })
  })
});
