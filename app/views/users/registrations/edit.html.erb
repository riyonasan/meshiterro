<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="top.css" type="text/css">
    <title>メシテロ石川</title>
  </head>
  <body>
    <header class="header">
      <div class="header_inner">
        <div class="header_inner__title col-sm-5"><%= image_tag 'logo.png' %></div>
        <% if user_signed_in? %>
          <div class="header_inner__login"><%= link_to 'プロフィール変更', edit_user_path(current_user) %></div>
          <div class="header_inner__login"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></div>
        <% else %>
          <div class="header_inner__login"><%= link_to '新規登録', new_user_registration_path %></div>
          <div class="header_inner__login"><%= link_to 'ログイン', new_user_session_path %></div>
        <% end %>
        <div class="input-group col-sm-7">
          <input type="text" class="form-control" size="20" maxlength="40">
          <span class="input-group-btn">
            <button class="btn btn-info" type="submit">検索</button>
          </span>
        </div>
      </div>
    </header>
    <div class="home-header">
      <div class="home-header_inner">
        <h2>プロフィール編集</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%# <%= form_for(@user) do |f| %>
            <%= devise_error_messages! %>
            <div class="field">
              ニックネーム <br>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
            </div>
            <div class="field">
              メールアドレス <br>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="field">
              パスワード <br />
              <%= f.password_field :password, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> 文字以上で入力してください</em>
              <% end %>
            </div>
            <div class="field">
              パスワード(確認) <br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="field">
              現在のパスワード(必須)<br />
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
            <div class="actions">
              <%= f.submit "変更" %>
            </div>
          <% end %>
          <h3>退会する</h3>
          <p>Unhappy? <%= button_to "退会", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          <%= link_to "戻る", :back %>
        </div>
      </div>
    </body>
    <footer></footer>
  </html>
