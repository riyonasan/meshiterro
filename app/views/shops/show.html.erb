      めんやたいが<br>
      <!-- rating -->
      <div class="star_rating">
        <div class="star_rating_front" style="width: 50%">★★★★★</div>
        <div class="star_rating_back">★★★★★</div>
      </div>
      <!-- ドロップダウンメニュー -->
      <ul id="dropmenu">
        <li><a href="#">トップ</a></li>
        <li><a href="#">メニュー・コース</a></li>
        <li><a href="#">写真</a></li>
        <li><a href="#">口コミ</a></li>
        <li><a href="#">地図</a></li>
      </ul>
    </div>
  </div>
  <div class="shop">
