    <title>メシテロ石川</title>
  </head>
  <body>
    <header class="header">
      <div class="header_inner">
        <div class="header_inner__title col-sm-5"><%= image_tag 'logo.png' %></div>
        <% if user_signed_in? %>
          <div class="header_inner__login"><%= link_to 'マイページ', user_path(current_user) %></div>
          <div class="header_inner__login"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></div>
        <% else %>
          <div class="header_inner__login"><%= link_to '新規登録', new_user_registration_path %></div>
          <div class="header_inner__login"><%= link_to 'ログイン', new_user_session_path %></div>
        <% end %>
        <div class="input-group col-sm-7">
          <input type="text" class="form-control" size="20" maxlength="40">
          <span class="input-group-btn">
            <button class="btn btn-info" type="submit">検索</button>
          </span>
        </div>
      </div>
    </header>
    <div class="shop_header">
      <div class="shop_header_inner">
        <!-- パンくず -->
        <ul id="bread-crumb-list">
          <li><%= link_to 'メシテロ石川',root_path%></li>
          &nbsp;&gt;&nbsp;
          <li><%= @genre.genre_name %></li>
          &nbsp;&gt;&nbsp;
          <li><%= @shop.shop_name%></li>
          <hr>
        </ul>
        <p><%= @shop.shop_name %></p>
        <!-- button -->
        <div class="fav_box">
          <!-- 行きたい -->
          <% if user_signed_in? %>
            <div id="updated_by_ajax" >
              <%= image_tag 'heart.png', height: '20'%>
              行きたい
              <%= @shop.likes_count%>
            </div>
          <% else %>
            <%= image_tag 'white_heart.png', height: '20'%>
            行きたい<%= @shop.likes_count%>
          <% end %>
          <!-- 行った -->
          <% if user_signed_in? %>
            <%= image_tag 'heart.png', height: '20'%>
            行った
          <% else %>
            <%= image_tag 'white_heart.png', height: '20'%>
            行った
          <% end %>
          <!--
      <%= image_tag 'ikitai.png', class: "fav_button", ontouchstart:""%>
      <%= image_tag 'itta.png', class: "fav_button", ontouchstart:""%>
      -->
